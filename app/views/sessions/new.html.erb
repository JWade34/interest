<div class="containter">

<%= form_tag auth_path, remote: true do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag "Sign In", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
</div>
